<vbox>
	<vbox styleName="questions" id="paraphrasing" width="100%">
		<label 
			styleName="question"
			id="question"
			htmlText="{{content.inbound.customer.paraphrasing}}"
			tooltip="{{content.inbound.customer.paraphrasing.tooltip}}"
			>
		</label>
		
		<hbox width="90%">
			
				<group 
					width="20%"
					layout="vertical" 
					id="agreement"
					styleNames="agreement"
					>
					<optionbox text="{{AGREE}}" id="y" />
					<optionbox text="{{DISAGREE}}" id="n" />
					<!--<optionbox text="{{NA}}" id="na"/>-->
				</group>
			<textarea
				styleName="justify"
				width="70%"
				height="60px"
				hidden="true"
				id="justify"
				placeholder="Tell us why !" 
				/>
			
		</hbox>
	</vbox>
	<vbox styleName="questions" id="onhold" width="100%">
		<label 
			styleName="question"
			id="question"
			htmlText="{{content.inbound.customer.onhold}}"
			tooltip="{{content.inbound.customer.onhold.tooltip}}"
			>
		</label>
		
		<hbox width="90%">
			
				<group 
					width="20%"
					layout="vertical" 
					id="agreement"
					styleNames="agreement"
					>
					<optionbox text="{{AGREE}}" id="y" />
					<optionbox text="{{DISAGREE}}" id="n" />
					<optionbox text="{{NA}}" id="na"/>
				</group>
			<textarea
				styleName="justify"
				width="70%"
				height="60px"
				hidden="true"
				id="justify"
				placeholder="Tell us why !" 
				/>
			
		</hbox>
	</vbox>
</vbox>