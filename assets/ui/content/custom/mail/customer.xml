<vbox>
		<vbox styleName="questions" id="language" width="100%">
		<label 
			styleName="question"
			id="question"
			htmlText="{{content.mail.customer.language}}"
			tooltip="{{content.mail.customer.language.tooltip}}"
			>
		</label>
		
		<hbox width="90%">
			
				<group 
					width="10%"
					layout="vertical" 
					id="agreement"
					styleNames="agreement critical"
					>
					<optionbox text="{{AGREE}}" id="y" />
					<optionbox text="{{DISAGREE}}" id="n" />
					<!--<optionbox text="{{NA}}" id="na"/>-->
				</group>
			<textarea
				styleName="justify"
				width="70%"
				height="60px"
				hidden="true"
				id="justify"
				placeholder="" 
				/>
			
		</hbox>
	</vbox>
</vbox>