<vbox width="100%">
	<vbox styleName="questions" id="welcome" width="100%">
		<label styleName="question" id="question" htmlText="{{content.inbound.customer.welcome}}" tooltip="{{content.inbound.customer.welcome.tooltip}}" >
		</label>

		<hbox width="90%">

			<group layout="vertical" id="agreement" styleNames="agreement">
				<optionbox text="{{AGREE}}" id="y" />
				<optionbox text="{{DISAGREE}}" id="n" />
